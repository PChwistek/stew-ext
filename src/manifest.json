{
  "name": "hermitly",
  "description": "The Pomodoro inspired task manager that blocks distractions while you work.",
  "version": "0.0.0.1",
  "manifest_version": 2,
  "icons": {
    "128": "assets/hermitly-ext-icon128.png"
  },
  "permissions": [
    "alarms", 
    "notifications", 
    "storage"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "128": "assets/hermitly-ext-icon128.png"
    },
    "default_title": "hermitly",
    "default_popup": "popup/popup.html",
    "theme_icons": [{
      "light": "assets/hermitly-ext-icon128.png",
      "dark": "assets/hermitly-ext-icon128.png",
      "size": 128
    }]
  }
}