{
  "name": "stew",
  "description": "the smart tab manager built for collaboration",
  "version": "0.1",
  "manifest_version": 2,
  "icons": {
    "212": "assets/310x310.png"
  },
  "permissions": [
    "alarms", 
    "notifications", 
    "storage",
    "webNavigation",
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "100": "assets/120x120.png"
    },
    "default_title": "hermitly",
    "default_popup": "popup/popup.html",
    "theme_icons": [{
      "light": "assets/hermitly-ext-icon128.png",
      "dark": "assets/hermitly-ext-icon128.png",
      "size": 128
    }]
  }
}